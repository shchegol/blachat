{
  "compilerOptions": {
    "outDir": "static/build",
    "module": "es6",
    "esModuleInterop": true,
    "target": "es2017",
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "sourceMap": false,
    "strictNullChecks": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/**/*.spec.ts", "test"]
}