{
  "name": "mf.messenger.praktikum.yandex",
  "version": "1.0.0",
  "description": "A simple messenger to test my skills",
  "scripts": {
    "prestart": "npm run webpack:prod",
    "start": "npm run serve",
    "webpack:dev": "webpack serve --config ./webpack/webpack.dev.js",
    "webpack:prod": "webpack --config ./webpack/webpack.prod.js",
    "serve": "node server.js",
    "eslint": "eslint --cache --ext .js,.jsx,.ts,.tsx src",
    "eslint:dump": "eslint --print-config ./.eslintrc.json",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shchegol/mf.messenger.praktikum.yandex.git"
  },
  "keywords": [
    "chat",
    "messenger",
    "vanilla-js"
  ],
  "author": {
    "name": "Alexander Shchegol",
    "email": "zelenzoom@gmail.com",
    "url": "http://shchegol.ru/"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/shchegol/mf.messenger.praktikum.yandex/issues"
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest",
      "\\.(pug)$": "jest-transform-pug"
    },
    "moduleNameMapper": {
      ".+\\.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2)$": "identity-obj-proxy",
      "^@root(.*)$": "<rootDir>/src/$1",
      "^@components(.*)$": "<rootDir>/src/components$1",
      "^@pages(.*)$": "<rootDir>/src/pages$1",
      "^@router(.*)$": "<rootDir>/src/router$1",
      "^@store(.*)$": "<rootDir>/src/store$1",
      "^@utils(.*)$": "<rootDir>/src/utils$1"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run eslint && npm run test"
    }
  },
  "homepage": "https://github.com/shchegol/mf.messenger.praktikum.yandex#readme",
  "browserslist": [
    "> .5% and last 2 versions",
    "not dead",
    "not OperaMini all",
    "ie >= 11",
    "Edge >= 12"
  ],
  "dependencies": {
    "autoprefixer": "10.0.4",
    "clean-webpack-plugin": "3.0.0",
    "cssnano": "4.1.10",
    "express": "4.17.1",
    "html-webpack-plugin": "4.5.0",
    "mini-css-extract-plugin": "1.3.1",
    "webpack": "5.9.0",
    "webpack-merge": "5.4.0"
  },
  "devDependencies": {
    "@babel/cli": "7.12.1",
    "@babel/core": "7.12.3",
    "@babel/preset-env": "7.12.1",
    "@babel/preset-typescript": "7.12.1",
    "@babel/register": "7.12.1",
    "@types/jest": "26.0.15",
    "@types/node": "14.14.8",
    "@types/pug": "2.0.4",
    "@types/webpack-env": "1.16.0",
    "@typescript-eslint/eslint-plugin": "4.9.0",
    "@typescript-eslint/parser": "4.9.0",
    "babel-loader": "8.2.2",
    "babel-plugin-transform-class-properties": "6.24.1",
    "css-loader": "5.0.1",
    "eslint": "7.14.0",
    "eslint-config-airbnb-typescript": "12.0.0",
    "eslint-loader": "4.0.2",
    "eslint-plugin-import": "2.22.0",
    "file-loader": "6.2.0",
    "html-loader": "1.3.2",
    "husky": "4.3.0",
    "identity-obj-proxy": "3.0.0",
    "image-webpack-loader": "7.0.1",
    "jest": "26.6.3",
    "jest-transform-pug": "0.1.0",
    "node-sass": "5.0.0",
    "postcss": "8.1.14",
    "postcss-loader": "4.1.0",
    "pug": "3.0.0",
    "pug-loader": "2.4.0",
    "regenerator-runtime": "0.13.7",
    "resolve-url-loader": "3.1.2",
    "sass": "1.29.0",
    "sass-loader": "10.1.0",
    "style-loader": "2.0.0",
    "ts-jest": "26.4.4",
    "ts-loader": "8.0.11",
    "typescript": "4.0.3",
    "webpack-cli": "4.2.0",
    "webpack-dev-server": "3.11.0"
  },
  "engines": {
    "node": ">=14.13.0"
  }
}
